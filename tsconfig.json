{
	"compilerOptions": {
		"target": "ES2022",
		"module": "Node16",
		"lib": [
			"ES2022"
		],
		"moduleResolution": "Node",
		"rootDir": ".",
		"outDir": "build",
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": false,
		"noImplicitThis": false,
		"strictNullChecks": false
	},
	"include": [
		"src/**/*"
	]
}
